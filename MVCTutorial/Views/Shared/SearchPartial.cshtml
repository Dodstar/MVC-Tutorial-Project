@model IEnumerable<MVCTutorial.Models.EmployeeViewModel>

@if (Model != null)
{
    foreach (var item in Model)
    {
        <tr>
            <td>@item.Forname</td>
            <td>@item.MiddleName</td>
            <td>@item.Surname</td>
            <td>@item.DepartmentName</td>
            
            <td><a href="#"><i class="glyphicon glyphicon-eye-open"></i>View</a></td>
        </tr>

    }
}